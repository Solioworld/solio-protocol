{
  "name": "solio-protocol-monorepo",
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "node": "22.x"
  },
  "sideEffects": false,
  "scripts": {
    "gen:doc": "typedoc",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r typecheck",
    "build": "pnpm -r build",
    "build:bonding-curve-calculator": "pnpm --filter @solio/core build && pnpm --filter bonding-curve-calculator build",
    "lint": "biome check --write && pnpm -r run lint",
    "format": "biome format --write && pnpm -r run format",
    "test": "vitest && pnpm -r run test",
    "test:coverage": "vitest --coverage"
  },
  "simple-git-hooks": {
    "pre-commit": [
      "pnpm lint && pnpm build"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.13.1",
    "@vitest/browser": "^3.0.5",
    "@vitest/coverage-v8": "3.0.5",
    "@vitest/ui": "^3.0.5",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "tsx": "^4.19.2",
    "typedoc": "^0.27.6",
    "typedoc-plugin-markdown": "^4.4.1",
    "typescript": "5.7.3",
    "vite": "^6.1.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5"
  },
  "workspaces": [
    "docs",
    "packages/*",
    "examples/*",
    "apps/*"
  ],
  "packageManager": "pnpm@9.15.5+sha512.845196026aab1cc3f098a0474b64dfbab2afe7a1b4e91dd86895d8e4aa32a7a6d03049e2d0ad770bbe4de023a7122fb68c1a1d6e0d033c7076085f9d5d4800d4"
}
